html
	head
	body
		h1 Hola %recipient.firstName%,
		p.text-larger Una consulta acaba de ser enviada para #{brand}:
		if enquiry.name.full || enquiry.email
			p.text-larger De
				if enquiry.name.full
					| <strong> #{enquiry.name.full}</strong>
				if enquiry.name.full && enquiry.email
					|  (
				if enquiry.email
					| <a href="mailto:#{enquiry.email}">#{enquiry.email}</a>
				if enquiry.name.full && enquiry.email
					| )
		if enquiry.phone
			p.text-larger Tel√©fono: #{enquiry.phone}
		if enquiry.enquiryType
			p.text-larger #{enquiry._.enquiryType.format()}
		if enquiry.message
			.text-larger !{enquiry.message.html}
		p.text-muted Enviado #{enquiry._.createdAt.format()}
		p &nbsp;
